{
	"langrev": "1",
	"warnings": ["no-unused"],
	"authors": [],
	"version": "0.1.0",
	"dependency-search-paths": ["libs"],
	"dependencies": [],
	"features": ["WAYLAND"],
	"script-dir": "./",
	"targets": {
		"shaders": {
			"type": "static-lib",
			"exec": [
				"slangc examples/cube/shaders/shader.slang -target spirv -o examples/cube/shaders/shader.spv"
			]
		},
		"zip": {
			"type": "prepare",
			"exec": ["zip -r vulkan.c3l ./vk manifest.json"]
		},
		"cube": {
			"type": "executable",
			"sources": ["./examples/cube/main.c3", "./examples/camera.c3", "./vk/*"],
			"dependencies": ["c3w"],
			"linked-libraries": ["vulkan"]
		},
		"cube-win": {
			"target": "windows-x64",
			// "winsdk": "/home/tonis/.xwin/lib", // You need to change this to your winSDK path, if cross building from other platform
			"linker-search-paths": ["./libs"],	
			"linked-libraries": ["vulkan-1"],
			"dependencies": ["c3w"],
			"type": "executable",
			"sources": ["./examples/cube/main.c3", "./examples/camera.c3", "./vk/*"]
		},
		"build": {
			"type": "executable",
			"dependencies": ["xml"],
			"sources": ["./parser/*", "./parser/build.c3"]
		}
	},
	"output": "./build"
}
